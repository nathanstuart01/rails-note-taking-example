<h1 class="center">Notes</h1>
<button id="add" class="btn">Add note</button>
<%= form_for @note, html: { class: 'hide', id: 'add_form' } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <%= f.submit class: "btn" %>
  <% end %>

  <div class="row">
    <% @notes.each do |note| %>
      <div class="col s12 m3">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= note.title %></span>
            <p><%= note.body %></p>
          </div>
          <div class="card-action">
            <%= link_to "Show", note_path(note) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
